model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  firstName String?
  avatar    String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  role      Role         @default(USER)
  status    UserStatus[]
}

enum Role {
  ADMIN
  USER
}

model UserStatus {
  id     Int    @id @default(autoincrement())
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  status Status
}

enum Status {
  INVITED
  ACCEPTED
  DECLINED
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}
